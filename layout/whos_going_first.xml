<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/help_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:visibility="visible">



    <TextView
        android:id="@+id/first"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="960dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="75sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/first_cpu"
        android:layout_width="261dp"
        android:layout_height="425dp"
        android:layout_marginEnd="504dp"
        android:layout_marginBottom="456dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/w00" />

    <ImageView
        android:id="@+id/first_human"
        android:layout_width="303dp"
        android:layout_height="445dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/b00" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:layout_width="316dp"
        android:layout_height="195dp"
        android:layout_marginEnd="292dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/bluebutton"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/descrip"
        android:layout_width="582dp"
        android:layout_height="116dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="GOES FIRST"
        android:textColor="@color/black"
        android:textSize="75sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/infomessage"
        android:layout_width="844dp"
        android:layout_height="86dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="* hands will be sorted by total number of pips in ascending order"
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>